# Environment variables for Campaign Analytics Backend
# Copy this file to .env for local development (DO NOT COMMIT .env to git)

# Database Configuration
# For development (SQLite):
# DATABASE_URL=sqlite:///./campaigns.db
# For production (PostgreSQL on Render):
DATABASE_URL=postgresql://user:password@host:5432/database_name

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# CORS Configuration
FRONTEND_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Environment
ENV=development

# Logging
LOG_LEVEL=INFO

# Optional: Sentry for error tracking (production)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: Custom port (default is 8000)
# PORT=8000